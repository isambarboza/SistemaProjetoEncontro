@model ProjetoEncontro.Models.Observacoes

@{
    ViewData["Title"] = "Delete";
}


<h1>Deletar</h1>
<h3>Tem certeza de que deseja excluir isto?</h3>
<div>
    <h4>Observações</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacoesDescricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservacoesDescricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacoesLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservacoesLocal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacoesData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservacoesData)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animais)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Animais.AnimalNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.UsuarioNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ObservacoesId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">De volta à lista</a>
    </form>
</div>
